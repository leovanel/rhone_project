<div class="container">
     

      <div class="column">
    
        <div class="col-lg-12 col-sm-12">
          <div class="container">
            <div class="card border-0 shadow my-5" id="article">
              <div class="card-body p-0">     

                <div class="row">
              
                  <div class="col-lg-10 col-sm-12">

                    <div class="card">

                    <%if @article.title.present?%>

                      <div class="card-header dark bg-dark">

                        <h2 class="m-0 dark"><%= @article.title %></h2>

                      </div>
                      <h3 class="text-center">Changer le titre de l'article' :</h3>
                    <%else%>
                      <h3 class="text-center">Saisis le titre du nouvel article :</h3>
                    <%end%>
                      
                      <hr>
            
                      <%= form_with model: @article,  url: admin_article_path(@article.id), method: 'put',local: true, class: 'col-5 offset-5 mx-auto' do |f| %>
                      
                        <%if flash[:danger] %>
                          <div class="alert alert-danger text-center" role="alert">
                            <%=flash[:danger] %>
                          </div>
                        <% end %>
                                            
            
                        <div class= 'form-group'>
                          
                          <%= f.text_field :title, class: 'form-control' %>
                        </div>
            
            
                        <hr>
            
                        
                        

                      <div class="card-body">


                        <%if @article.article_images.attached?%>
                          <%= image_tag @article.article_images.first, alt: 'article_image',class:"img-fluid rounded" %>
                          <h5 class="font-weight-bold">=== ajouter une carte? ===</h5>
                          <%= form_tag admin_article_article_images_path(params[:id]), multipart: true do %>
                            <%= file_field_tag :article_images %>
                            <%= submit_tag "Upload" %>
                          <% end %>

                        <%else%>
                          <h5 class="font-weight-bold">=== Veuillez uploader une carte pour cet article ===</h5>
                          </br>
                          <%= form_tag admin_article_article_images_path(params[:id]), multipart: true do %>
                            <%= file_field_tag :article_images %>
                            <%= submit_tag "Upload" %>
                          <% end %>
                        <% end%>  

                        <hr>
                        </br>
                        </br>
                        
                        <%if @article.body.present?%>
                        <div> 

                      

                        <p><%= @article.body %></p>

                      </div>
                      <h3 class="text-center">modifier le texte :</h3>
                    <%else%>
                      <h3 class="text-center">Saisis un texte :</h3>
                    <%end%>
                      
                      <hr>
            
                                                               
            
                        <div class= 'form-group'>
                          
                          <%= f.text_area :body, class: 'form-control' %>
                        </div>
                        
                        <div class= 'form-group'>
                          
                        
                        </div>
            
            
                        <hr>
                        <%= f.submit "Enregistrer les modifications", class: 'btn btn-lg btn-success btn-rounded' %>
            
                        <% end %>
                        </div> 
                      </div> 

                </div>      
              </div>
            </div>      
          </div> 
        </div> 
      </div> 
    </div>     
  </div> 
</div> 
