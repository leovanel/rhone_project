<div class="container">
  <div class="card border-0 shadow my-5" id="rubric">
    <div class="card-body p-0">     
      <div class="row">
          
        <div class="col-lg-10 col-sm-12">
          <div class="card">
          
            <div class="card-header dark bg-dark">
              <h2 class="m-0 dark"><%= @article.title %></h2>
            </div>
            <% if current_user != nil %>
                      <% if current_user.is_admin %>
                      </br>
                        <%=link_to "Modifier l'article",edit_admin_article_path(@article.id ),class: 'btn btn-outline-secondary font-weight-bold ml-3 my-2 my-sm-0' %>
                      <%end%>
            <%end%>
            
            <div class="card-body p-2 ">
            <%= image_tag((@article.article_images.first),  class:"img-fluid rounded") %>
            <p class="lead"><%= @article.body %></p>
            </div>  
          </div> 
        </div> 
      </div> 
    </div>     
  </div> 
</div> 


