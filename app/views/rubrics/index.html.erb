<div class="wrapper">

  <div class="container">
    <div class="row "> 
      <div class="col-1 p-0">  
      </div>
      <div class="col-10 p-0">    
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/assets/photo_rhone1.PNG" "class="d-block w-100" alt="image1">
              <div class="carousel-caption d-none d-md-block text-dark font-weight-bold mb-n3">
                
                <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
              </div>
            </div>
            <div class="carousel-item">
              <img src="/assets/photo_rhone2.PNG" class="d-block w-100" alt="image2">
              <div class="carousel-caption d-none d-md-block text-dark font-weight-bold mb-n3 ">
                
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
              </div>
            </div>
            <div class="carousel-item">
              <img src="/assets/photo_rhone3.PNG" class="d-block w-100" alt="image3">
              <div class="carousel-caption d-none d-md-block text-dark font-weight-bold mb-n3">
                
                <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
             <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-3 ">  

    <nav class ="dark bg-dark " , id="sidebar" >
      </br>
      <% if current_user != nil %>
      <% if current_user.is_admin %>
       <%=button_to "Ajouter une rubrique",admin_rubrics_path,method: :post,class: 'btn btn-outline-secondary font-weight-bold ml-3 my-2 my-sm-0' %>
      <%end%>
      <%end%>
      
      <% @rubrics.each do |rubric| %>
      
      <div class="card mb-4 bg-dark">
        <div class="card-header  bg-dark">
          <h5 class="m-0 font-weight-bold "><%= rubric.title %>:</h5>        
        </div>
        <% if  rubric.img_url.present? %>    
          <%= link_to image_tag(rubric.img_url , class: 'card-img-top p-0') , rubric_path(rubric.id)  %>
        <%else%>
        <%= link_to image_tag(rubric.rubric_image , class: 'card-img-top p-0') , rubric_path(rubric.id) %>
         <%end%>
      </div> 
      
      <%end%>               
          
    </nav>
  </div> 
</div> 