<div class="container">
     

      <div class="column">
    
        <div class="col-lg-12 col-sm-12">
          <div class="container">
            <div class="card border-0 shadow my-5" id="rubric">
              <div class="card-body p-0">     

                <div class="row">
              
                  <div class="col-lg-10 col-sm-12">

                    <div class="card">

                      <div class="card-header dark bg-dark">

                        <h2 class="m-0 dark"><%= @rubric.title %></h2>

                      </div>

                      <div class="card-body">

                        <%= image_tag((@rubric.rubric_image),  class:"img-fluid rounded") %>
                      </div>  
                    </div> 
                  </div> 
                </div> 
              </div>     
            </div> 
          </div> 

          
          <div class="container">
          
            <div class="card border-0 shadow mt-n5 mb-5" id="article">
              <div class="card-body p-0">
              <% if current_user != nil %>
              <% if current_user.is_admin %>
                <%=link_to "Ajouter un article",new_admin_article_path,class: 'btn btn-outline-secondary font-weight-bold ml-3 my-2 my-sm-0' %>
              <%end%>
              <%end%>     

                <div class="row h-25">
                  <% @rubric.articles.each do |article| %>
              
                  <div class="col-md-3 col-sm-12 ">

                    <div class="card">

                      <div class="card-header dark bg-dark">

                        <p class="m-0 dark"><%= article.title %></p>

                      </div>

                      <div class="card-body">                                        

                        <%= link_to image_tag(article.head_img_url, class:"card-img-top p-0"), article_path(article.id) %>
                      </div>  
                    </div> 
                  </div> 
                  <%end%>
                </div> 
              </div>     
            </div> 
          </div> 
        </div> 
        
      </div> 
      
   
</div> 




          